package com.learn.datastructure;

import java.util.Arrays;
import java.util.Scanner;

public class BinarySearch2 {
	public static void main(String[] args) {
		int[] arr = { 55, 48, 22, 36, 99, 12 };
		Arrays.sort(arr);
		Scanner sc = new Scanner(System.in);

		for (int j : arr) {
			System.out.println(j);
		}
		System.out.println();

		System.out.println("enter  a key value to be search");
		int v = sc.nextInt();

		/*
		 * 1. find mid=(low+high)/2; 2.if a[mid]==key value return the location
		 * 3.if a[mid]>key =>high=mid-1 4.if a[mid]<key =>low=mid+1
		 */
		int low = 0;
		int high = arr.length - 1;
		int mid = 0;
		int flag = 0;

		while (low <= high) {
System.out.println("dfhb");

			mid = (low + high) / 2;

			if (arr[mid] == v) {
				flag = 1;
			} else if (arr[mid] < v) {
				low = mid + 1;
			} else {
				high = mid - 1;
			}
		}

		if (flag == 1) {
			System.out.println("element is found at location " + mid);
		} else {
			System.out.println("element is not found");
		}

	}

}
